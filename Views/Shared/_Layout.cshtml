<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - JoyRise Fitness</title>
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" />
    @RenderSection("head", required: false)

    <!-- 统一玻璃导航 + 深灰背景 -->
    <style>
        :root {
            --primary: #007aff;
            --glass: rgba(30,30,30,.35);
            --bg-dark: #1a1a1a;
        }

        body {
            background: var(--bg-dark);
            color: #f5f5f7;
            font-family: 'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif;
            padding-top: 100px; /* 给固定导航留空间 */
        }
        /* 玻璃导航栏 */
        .glass-nav {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            background: var(--glass);
            border-bottom: 1px solid rgba(255,255,255,.15);
            box-shadow: 0 8px 32px rgba(0,0,0,.1);
        }

        .nav-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px 40px;
        }

        .logo {
            font-size: 2.4rem;
            font-weight: 800;
            letter-spacing: 1px;
            background: linear-gradient(135deg,#fff 0%,#d0d0d0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .nav-links {
            display: flex;
            gap: 40px;
            list-style: none;
        }

            .nav-links a {
                position: relative;
                color: #fff;
                text-decoration: none;
                font-size: 1.2rem;
                font-weight: 600;
                letter-spacing: .5px;
                transition: color .3s;
            }

                .nav-links a::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -6px;
                    width: 0;
                    height: 2px;
                    background: var(--primary);
                    transition: width .3s;
                }

                .nav-links a:hover::after {
                    width: 100%;
                }

                .nav-links a:hover {
                    color: var(--primary);
                }
    </style>
</head>
<body>
    <!-- 高级玻璃导航 -->
    <header class="glass-nav">
        <div class="nav-content">
            <div class="logo">JoyRise Fitness</div>
            <ul class="nav-links">
                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                <li><a href="@Url.Action("Index","Equipment")">Equipment</a></li>
                <li><a href="@Url.Action("Index","Generator")">Workout Generator</a></li>
                <li><a href="@Url.Action("Contact","Home")">Contact Us</a></li>
            </ul>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - JoyRise Fitness · Move · Grow · Be Yourself</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>