<html>
<head>
    <link rel="stylesheet" href="~/content/site.css" />
</head>
<body>

    @using JoyRiseFitness.Models
    @model JoyRiseFitness.Models.WorkoutGenViewModel
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewBag.Title = "Training Generator";
    }

    <section class="gen-container">
        <!-- Header -->
        <div class="gen-header">
            <h1 class="gen-title">Training Generator</h1>
            <p class="gen-subtitle">Create your personalized workout plan based on your goals and fitness level.</p>
        </div>

        <!-- Generator Form -->
        <div class="form-section glass-card">
            <form id="genForm" class="gen-form">
                <div class="form-row">
                    <div class="form-group">
                        <label>Gender</label>
                        <select name="Gender" class="form-select">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Age</label>
                        <input type="number" name="Age" class="form-input" placeholder="Age" min="10" max="99" value="25" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Fitness Goal</label>
                        <select name="Goal" class="form-select">
                            <option value="">Select Goal</option>
                            <option value="LoseFat">Weight Loss</option>
                            <option value="BuildMuscle">Muscle Building</option>
                            <option value="Strength">Strength</option>
                            <option value="Endurance">Endurance</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Experience Level</label>
                        <select name="Level" class="form-select">
                            <option value="">Select Level</option>
                            <option value="Beginner">Beginner</option>
                            <option value="Intermediate">Intermediate</option>
                            <option value="Advanced">Advanced</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group full-width">
                        <label>Target Muscle Group</label>
                        <select name="Part" class="form-select">
                            <option value="">Select Muscle Group</option>
                            <option value="Chest">Chest</option>
                            <option value="Back">Back</option>
                            <option value="Legs">Legs</option>
                            <option value="Arms">Arms</option>
                            <option value="Shoulders">Shoulders</option>
                            <option value="Core">Core</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="generate-btn">
                    <span class="btn-text">Generate Workout</span>
                    <span class="btn-loader" style="display: none;">
                        <div class="spinner"></div>
                        Generating...
                    </span>
                </button>
            </form>
        </div>

        <!-- Results Section -->
        <div id="resultSection" class="result-section" style="display: none;">
            <div class="section-header">
                <h2>Generated Exercises</h2>
                <p>Select exercises to add to your training plan</p>
            </div>
            <div id="result" class="exercises-container">
                <!-- Results will be loaded here -->
            </div>
            <div id="saveActions" class="save-actions" style="display: none;">
                <button id="savePlanBtn" class="save-plan-btn">
                    <i class="fas fa-plus"></i>
                    Add Selected to My Plan (<span id="selectedCount">0</span>)
                </button>
            </div>
        </div>

        <!-- My Plan Section -->
        <div id="myPlanSection" class="plan-section glass-card">
            <div class="section-header">
                <h2>My Training Plan</h2>
                <p>Your personalized workout collection</p>
            </div>
            <div id="planList" class="plan-container">
                @Html.Action("MyPlan")
            </div>
        </div>
    </section>


    <!-- 训练生成器逻辑 -->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/Scripts/training-generator.js")"></script>




</body>
</html>