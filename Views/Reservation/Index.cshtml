@{
    ViewBag.Title = "器材/时段预约";
}

<section class="resv-container">

    <div class="resv-header">
        <h1>器材 / 时段预约</h1>
        <p class="sub">请选择你想预约的训练日期与时段</p>
    </div>

    <!-- 日期选择 -->
    <div class="day-picker">
        @foreach (var d in ViewBag.Days)
        {
            <button class="day-btn" data-day="@d.ToString("yyyy-MM-dd")">
                <span class="day-date">@d.ToString("MM月dd日")</span>
                <span class="day-week">@d.ToString("ddd")</span>
            </button>
        }
    </div>

    <!-- 时段表格 -->
    <div id="slotPanel" class="slot-grid">
        <!-- JS 动态生成 -->
    </div>

    <!-- 确认按钮 -->
    <button id="confirmBtn" class="submit-btn" style="display:none;">提交预约</button>
</section>

<!-- 弹窗 -->
<div id="resvModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h3>确认预约</h3>
        <p>日期：<span id="mDate"></span></p>
        <p>时段：<span id="mHour"></span>:00 - <span id="mEnd"></span>:00</p>

        <label>人数：</label>
        <select id="mCount" class="count-select">
            <option value="1">1 人</option>
            <option value="2">2 人</option>
            <option value="3">3 人</option>
        </select>

        <button id="submitBtn" class="submit-btn">确定</button>
    </div>
</div>

@Html.Partial("_LiveOccupancy")

@section scripts{
    <script src="@Url.Content("~/Scripts/reservation.js")"></script>
}

<style>
    /* 页面整体 */
    .resv-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 25px;
        animation: fadeIn 0.6s ease forwards;
    }

    /* 标题 */
    .resv-header h1 {
        font-size: 36px;
        font-weight: 700;
        text-align: center;
    }

    .resv-header .sub {
        margin-top: 5px;
        color: #555;
        text-align: center;
    }

    /* 日期按钮 */
    .day-picker {
        display: flex;
        gap: 18px;
        margin: 30px 0;
        flex-wrap: wrap;
    }

    .day-btn {
        background: #fff;
        border: 2px solid #eee;
        padding: 12px 20px;
        border-radius: 14px;
        cursor: pointer;
        box-shadow: 0 6px 15px rgba(0,0,0,0.08);
        transition: all .25s;
    }

        .day-btn:hover,
        .day-btn.active {
            border-color: #4a8df1;
            box-shadow: 0 10px 25px rgba(74,141,241,0.3);
            transform: translateY(-3px);
        }

    .day-date {
        font-size: 18px;
        font-weight: 600;
    }

    .day-week {
        font-size: 14px;
        color: #777;
    }

    /* 时段网格 */
    .slot-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 18px;
        margin: 30px 0;
    }

    .slot-item {
        background: #fff;
        padding: 16px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        cursor: pointer;
        transition: .25s;
        text-align: center;
        border: 2px solid transparent;
    }

        .slot-item:hover {
            transform: translateY(-3px);
            border-color: #a5c8ff;
        }

        .slot-item.selected {
            border-color: #4a8df1;
            background: #e9f1ff;
        }

    /* 按钮 */
    .submit-btn {
        width: 100%;
        background: #4a8df1;
        border: none;
        padding: 14px 0;
        border-radius: 12px;
        color: white;
        font-size: 18px;
        margin-top: 10px;
        cursor: pointer;
        transition: .25s;
    }

        .submit-btn:hover {
            background: #3a76d6;
        }

    /* 弹窗 */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(4px);
        background: rgba(0,0,0,0.3);
    }

    .modal-content {
        background: white;
        width: 400px;
        margin: 120px auto;
        padding: 25px;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        animation: fadeIn 0.4s ease;
    }

    .close {
        float: right;
        cursor: pointer;
        font-size: 20px;
    }

    .count-select {
        width: 100%;
        margin: 10px 0;
        padding: 8px;
        border-radius: 10px;
        border: 1px solid #ccc;
    }

    /* 动画 */
    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
    }
</style>
